{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "es2020"
    ],
    "declaration": true,
    "outDir": "dist",
    "declarationDir": "dist/types",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "typedocOptions": {
      "entryPoints": ["lib/index.ts"],
      "out": "docs",
      "entryPointStrategy": "Expand",
      "plugin": ["typedoc-theme-hierarchy", "typedoc-material-theme"],
      "theme": "hierarchy",
      "name": "OSML CDK Constructs",
      "themeColor": "#1D2128",
      "includeVersion": true,
      "navigation": {
        "includeCategories": true,
        "includeGroups": false,
        "includeFolders": true
    },
    "categorizeByGroup": true
  },
  "exclude": [
    "node_modules",
    "cdk.out",
    "dist"
  ]
}
